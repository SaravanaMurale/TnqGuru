<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/five_dp"
    android:orientation="vertical"
    tools:context=".common.PaymentGatewayActivity">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:src="@drawable/tnqguulogo"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:id="@+id/btnPay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="@drawable/login_btn"
        android:fontFamily="@font/ubuntu_regular"
        android:text="pay"
        android:textColor="@color/white"
        android:textSize="@dimen/twenty_sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/ubuntu_regular"
            android:text="Amount you need to pay"
            android:textSize="@dimen/fifteen_dp" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/twenty_sp"
            android:fontFamily="@font/ubuntu_regular"
            android:text="101"
            android:textSize="@dimen/fifteen_dp" />


    </LinearLayout>

    <TextView
        android:id="@+id/userSelectedCourse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/courseSelectText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/ten_dp"
        android:layout_marginRight="@dimen/ten_dp"
        android:fontFamily="@font/ubuntu_regular"
        android:text="share market for tamil "
        android:textSize="@dimen/fifteen_dp"

        />


    <TextView
        android:id="@+id/coursePriceText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/userSelectedCourse"
        android:layout_marginLeft="@dimen/ten_dp"
        android:layout_marginTop="@dimen/fiften_sp"
        android:fontFamily="@font/ubuntu_regular"
        android:text="Course Price"
        android:textColor="@color/black"
        android:textSize="@dimen/fifteen_dp"
        android:textStyle="bold"

        />

    <TextView
        android:id="@+id/courseAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/userSelectedCourse"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/fiften_sp"
        android:layout_marginRight="@dimen/ten_dp"
        android:fontFamily="@font/ubuntu_regular"
        android:text="101"
        android:textSize="@dimen/fifteen_dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(Inclusive of all Taxes)"
        android:layout_below="@id/courseAmount"
        android:layout_alignParentRight="true"
        android:textSize="@dimen/ten_dp"
        android:fontFamily="@font/ubuntu_regular"
        />

    <TextView
        android:id="@+id/paydetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Payment Details"
        android:textColor="@color/red"
        android:textSize="@dimen/twenty_sp"
        android:textStyle="bold"
        android:visibility="invisible"
        android:fontFamily="@font/ubuntu_regular"
        />


    <TextView
        android:id="@+id/courseSelectText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/paydetails"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/twenty_dp"
        android:fontFamily="@font/ubuntu_regular"
        android:text="Course Selcted"
        android:textColor="@color/black"
        android:textSize="@dimen/twenty_sp"
        android:textStyle="bold"

        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/userSelectedCourse"
        android:layout_marginTop="@dimen/eight_dp"
        android:background="@color/gray" />

</RelativeLayout>