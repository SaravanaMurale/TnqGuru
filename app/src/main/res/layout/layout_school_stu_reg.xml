<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/twenty_dp">

        <TextView
            android:id="@+id/csr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="School Student Registration"
            android:textSize="@dimen/twenty_five_sp"
            android:fontFamily="@font/ubuntu_regular"
            android:gravity="center"
            android:textColor="@color/dar_blue"
            android:layout_marginTop="@dimen/twenty_five_sp"/>

        <Spinner
            android:id="@+id/spinnerSelectSchool"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/rounded_border"
            android:layout_marginTop="@dimen/twenty_dp"
            android:layout_below="@+id/csr"/>

            <EditText
                android:id="@+id/scholStuName"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:hint="Name"
                android:fontFamily="@font/ubuntu_regular"
                android:background="@drawable/rounded_border"
                android:layout_marginTop="@dimen/twenty_dp"
                android:paddingLeft="@dimen/twenty_dp"
                android:layout_below="@+id/spinnerSelectSchool"/>

            <EditText
                android:id="@+id/scholStuMobile"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:hint="Mobile"
                android:fontFamily="@font/ubuntu_regular"
                android:inputType="phone"
                android:background="@drawable/rounded_border"
                android:layout_marginTop="@dimen/twenty_dp"
                android:paddingLeft="@dimen/twenty_dp"
                android:layout_below="@+id/scholStuName"/>

            <EditText
                android:id="@+id/scholStuEmail"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:hint="Email"
                android:fontFamily="@font/ubuntu_regular"
                android:background="@drawable/rounded_border"
                android:layout_marginTop="@dimen/twenty_dp"
                android:paddingLeft="@dimen/twenty_dp"
                android:layout_below="@+id/scholStuMobile"/>

            <EditText
                android:id="@+id/scholStuAddress"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="bottom"
                android:hint="Address"
                android:fontFamily="@font/ubuntu_regular"
                android:background="@drawable/rounded_border"
                android:layout_marginTop="@dimen/twenty_dp"
                android:paddingLeft="@dimen/twenty_dp"
                android:paddingBottom="@dimen/ten_dp"
                android:layout_below="@+id/scholStuEmail"/>

            <EditText
                android:id="@+id/colgFacPincode"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:hint="Pincode"
                android:fontFamily="@font/ubuntu_regular"
                android:background="@drawable/rounded_border"
                android:layout_marginTop="@dimen/twenty_dp"
                android:paddingLeft="@dimen/twenty_dp"
                android:inputType="number"
                android:layout_below="@+id/scholStuAddress"/>

        <Button
            android:id="@+id/stuDateOfBirth"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="Data of Birth"
            android:textSize="17sp"
            android:fontFamily="@font/ubuntu_medium"
            android:background="@drawable/text_bg_btn"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/twenty_dp"
            android:layout_below="@+id/colgFacPincode"/>

        <Button
            android:id="@+id/stuPhoto"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="Student Photo"
            android:textSize="17sp"
            android:fontFamily="@font/ubuntu_medium"
            android:background="@drawable/text_bg_btn"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/twenty_dp"
            android:layout_below="@+id/stuDateOfBirth"/>

        <Spinner
            android:id="@+id/modeOfScholStuClass"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/rounded_border"
            android:layout_marginTop="@dimen/twenty_dp"
            android:layout_below="@+id/stuPhoto" />

        <Button
            android:id="@+id/subSyllabus"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="Subject Syllabus"
            android:textSize="17sp"
            android:fontFamily="@font/ubuntu_medium"
            android:background="@drawable/text_bg_btn"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/twenty_dp"
            android:layout_below="@+id/modeOfScholStuClass"
            android:layout_marginBottom="10dp"/>

    </RelativeLayout>

</ScrollView>