<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Student/Parent Registration"
            android:textSize="@dimen/twenty_five_sp"
            android:fontFamily="@font/ubuntu_regular"
            android:gravity="center"
            android:textColor="@color/dar_blue"
            android:layout_marginTop="@dimen/ten_dp"/>



        <Spinner
            android:id="@+id/spinnerSelectSchool"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/fifty_dp" />



            <EditText
                android:id="@+id/scholStuName"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:paddingLeft="@dimen/twenty_dp"
                android:hint="Name"
                android:fontFamily="@font/ubuntu_regular"
                android:background="@drawable/rounded_border"
                android:layout_gravity="center"
                android:inputType="text"
                android:imeOptions="actionNext"
                android:layout_marginTop="@dimen/ten_dp"
                android:layout_below="@id/spinnerSelectSchool"
                />




            <EditText
                android:id="@+id/scholStuMobile"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:paddingLeft="@dimen/twenty_dp"
                android:hint="Mobile"
                android:inputType="number"
                android:maxLength="10"
                android:imeOptions="actionNext"
                android:layout_below="@id/scholStuName"
                android:fontFamily="@font/ubuntu_regular"
                android:background="@drawable/rounded_border"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/ten_dp"
                />

        <Spinner
            android:id="@+id/spinnerScholStuCountry"
            android:layout_width="match_parent"
            android:layout_height="@dimen/forty_dp"
            android:layout_below="@+id/scholStuMobile"
            android:layout_marginTop="@dimen/ten_dp"
            />

        <EditText
            android:id="@+id/scholStuAddress"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:paddingLeft="@dimen/twenty_dp"
            android:paddingBottom="@dimen/twenty_dp"
            android:gravity="bottom"
            android:hint="Address"
            android:layout_below="@id/spinnerScholStuCountry"
            android:fontFamily="@font/ubuntu_regular"
            android:background="@drawable/rounded_border"
            android:layout_gravity="center"
            android:inputType="textPostalAddress"
            android:imeOptions="actionNext"
            android:layout_marginTop="@dimen/ten_dp"/>



        <EditText
            android:id="@+id/scholStuPincode"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="Pincode"
            android:paddingLeft="@dimen/twenty_dp"
            android:layout_below="@+id/scholStuAddress"
            android:fontFamily="@font/ubuntu_regular"
            android:background="@drawable/rounded_border"
            android:layout_gravity="center"
            android:inputType="number"
            android:maxLines="6"
            android:imeOptions="actionNext"
            android:layout_marginTop="@dimen/ten_dp"/>



        <EditText
            android:id="@+id/scholStuEmail"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="Email"
            android:paddingLeft="@dimen/twenty_dp"
            android:layout_below="@+id/scholStuPincode"
            android:fontFamily="@font/ubuntu_regular"
            android:background="@drawable/rounded_border"
            android:layout_gravity="center"
            android:inputType="textEmailAddress"
            android:layout_marginTop="@dimen/ten_dp"/>

        <EditText
            android:id="@+id/scholStuPassword"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="Password"
            android:inputType="textWebPassword"
            android:imeOptions="actionNext"
            android:paddingLeft="@dimen/twenty_dp"
            android:layout_below="@+id/scholStuEmail"
            android:fontFamily="@font/ubuntu_regular"
            android:background="@drawable/rounded_border"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/ten_dp"/>

        <Spinner
            android:id="@+id/modeOfScholStuClass"
            android:layout_width="match_parent"
            android:layout_height="@dimen/forty_dp"
            android:layout_below="@+id/scholStuPassword"
            android:layout_marginTop="@dimen/ten_dp"/>

        <RelativeLayout
            android:id="@+id/stuPhotoUploadBlock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/modeOfScholStuClass"
            >

            <Button
                android:id="@+id/scholStuUloadImage"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Choose Photo"
                android:background="@drawable/text_bg_btn"
                android:fontFamily="@font/ubuntu_regular"
                android:textSize="@dimen/fifteen_dp"
                android:textColor="@color/white"
                android:padding="@dimen/five_dp"
                android:layout_marginTop="@dimen/ten_dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose Photo..."
                android:layout_toRightOf="@id/scholStuUloadImage"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/ten_dp"

                />

        </RelativeLayout>


        <Button
            android:id="@+id/btnScholStuReg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/submit"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/ten_dp"
            android:background="@drawable/text_bg_btn"
            android:textColor="@color/white"
            android:layout_below="@+id/stuPhotoUploadBlock"

            />





    </RelativeLayout>

</ScrollView>