<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/facRegBlock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <TextView
        android:id="@+id/t1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Faculty Registration"
        android:fontFamily="@font/ubuntu_regular"
        android:textSize="@dimen/twenty_sp"
        android:background="@color/shimmer_bg"
        android:padding="@dimen/fifteen_dp"/>

        <RadioGroup
            android:id="@+id/fac_sele_radioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/t1"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp">

            <RadioButton
                android:id="@+id/radioSchool"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/twenty_dp"
                android:layout_marginTop="10dp"
                android:checked="false"
                android:fontFamily="@font/ubuntu_regular"
                android:text="School"
                android:textSize="20dp" />

            <RadioButton
                android:id="@+id/radioCollege"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/twenty_dp"
                android:layout_marginTop="20dp"
                android:checked="false"
                android:fontFamily="@font/ubuntu_regular"
                android:text="College"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/stu_reg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fac_sele_radioGroup"
                android:layout_marginTop="10dp"
                android:background="@color/shimmer_bg"
                android:fontFamily="@font/ubuntu_regular"
                android:padding="@dimen/fifteen_dp"
                android:text="Student Registration"
                android:textSize="@dimen/twenty_sp" />

            <RadioButton
                android:id="@+id/radioStuSchool"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/twenty_dp"
                android:layout_marginTop="10dp"
                android:checked="false"
                android:fontFamily="@font/ubuntu_regular"
                android:text="School"
                android:textSize="20dp" />

            <RadioButton
                android:id="@+id/radioStuCollege"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/twenty_dp"
                android:checked="false"
                android:fontFamily="@font/ubuntu_regular"
                android:text="College"
                android:textSize="20dp" />

        </RadioGroup>

    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/stuRegBlock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/facRegBlock"
        android:layout_marginTop="10dp"
        >


        <!--<TextView
            android:id="@+id/t2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Student Registration"
            />
-->
        <!--<RadioGroup
            android:id="@+id/stu_sele_radioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/t2"
            >

            <RadioButton
                android:id="@+id/radioStuSchool"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:checked="false"
                android:text="School"
                android:textSize="20dp" />

            <RadioButton
                android:id="@+id/radioStuCollege"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:checked="false"
                android:text="College"
                android:textSize="20dp" />
        </RadioGroup>-->

    </RelativeLayout>

    <Button
        android:id="@+id/btn_fac_selection"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:text="@string/submit"
        android:textSize="17sp"
        android:fontFamily="@font/ubuntu_medium"
        android:layout_below="@id/stuRegBlock"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/ten_dp"
        android:background="@drawable/text_bg_btn"
        android:textColor="@color/white"/>


</RelativeLayout>