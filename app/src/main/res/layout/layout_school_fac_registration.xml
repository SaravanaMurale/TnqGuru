<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/five_dp"
            android:layout_marginTop="@dimen/five_dp"
            android:fontFamily="@font/ubuntu_regular"
            android:gravity="center"
            android:text="School Faculty Registration"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="@dimen/twenty_sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/five_dp"
            android:background="@drawable/rounded_border">

            <Spinner
                android:id="@+id/spinnerSchoLevel"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/fifteen_dp" />

        </RelativeLayout>


        <EditText
            android:id="@+id/scholFacName"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/five_dp"
            android:background="@drawable/rounded_border"
            android:fontFamily="@font/ubuntu_regular"
            android:hint="Name"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:paddingLeft="@dimen/twenty_dp" />


        <EditText
            android:id="@+id/scholFacMobile"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_below="@id/scholFacName"
            android:layout_gravity="center"
            android:layout_margin="@dimen/five_dp"
            android:background="@drawable/rounded_border"
            android:fontFamily="@font/ubuntu_regular"
            android:hint="Mobile"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLength="10"
            android:paddingLeft="@dimen/twenty_dp" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/scholFacMobile"
            android:layout_margin="@dimen/five_dp"
            android:background="@drawable/rounded_border">


            <Spinner
                android:id="@+id/spinnerScholFacCountry"
                android:layout_width="match_parent"
                android:layout_height="@dimen/forty_dp"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/five_dp" />

        </RelativeLayout>


        <EditText
            android:id="@+id/scholFacAddress"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@id/spinnerScholFacCountry"
            android:layout_margin="@dimen/five_dp"
            android:background="@drawable/rounded_border"
            android:fontFamily="@font/ubuntu_regular"
            android:hint="Address"
            android:imeOptions="actionNext"
            android:inputType="textPostalAddress"
            android:paddingLeft="@dimen/twenty_dp"

            />

        <EditText
            android:id="@+id/scholFacPincode"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_below="@+id/scholFacAddress"
            android:layout_gravity="center"
            android:layout_margin="@dimen/five_dp"
            android:background="@drawable/rounded_border"
            android:fontFamily="@font/ubuntu_regular"
            android:hint="Pincode"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLines="6"
            android:paddingLeft="@dimen/twenty_dp" />

        <EditText
            android:id="@+id/scholFacEmail"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_below="@+id/scholFacPincode"
            android:layout_gravity="center"
            android:layout_margin="@dimen/five_dp"
            android:background="@drawable/rounded_border"
            android:fontFamily="@font/ubuntu_regular"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:paddingLeft="@dimen/twenty_dp" />

        <EditText
            android:id="@+id/scholFacPassword"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_below="@+id/scholFacEmail"
            android:layout_gravity="center"
            android:layout_margin="@dimen/five_dp"
            android:background="@drawable/rounded_border"
            android:fontFamily="@font/ubuntu_regular"
            android:hint="Password"
            android:imeOptions="actionNext"
            android:inputType="textWebPassword"
            android:paddingLeft="@dimen/twenty_dp" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/scholFacPassword">

            <Button
                android:id="@+id/scholUploadImage"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/five_dp"
                android:background="@drawable/text_bg_btn"
                android:fontFamily="@font/ubuntu_regular"
                android:padding="@dimen/five_dp"
                android:text="Choose Photo"
                android:textColor="@color/white"
                android:textSize="@dimen/fifteen_dp" />

            <TextView
                android:id="@+id/schoolFacPhotoText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/ten_dp"
                android:fontFamily="@font/ubuntu_regular"
                android:layout_toRightOf="@id/scholUploadImage"
                android:text="Choose Photo..."

                />

        </RelativeLayout>

        <EditText
            android:id="@+id/scholFacAbout"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@id/scholUploadImage"
            android:layout_gravity="center"
            android:layout_margin="@dimen/five_dp"
            android:background="@drawable/rounded_border"
            android:fontFamily="@font/ubuntu_regular"
            android:hint="About"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:paddingLeft="@dimen/twenty_dp" />

        <RelativeLayout
            android:id="@+id/scholQualBlock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/scholFacAbout"
            android:layout_margin="@dimen/five_dp"
            android:background="@drawable/rounded_border">

            <include layout="@layout/layout_qualification_checkbox" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/scholQualBlock"
            android:layout_margin="@dimen/five_dp"
            android:background="@drawable/rounded_border">

            <Spinner
                android:id="@+id/spinnerScholTotalExp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/forty_dp"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/twenty_dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spinnerScholTotalExp"
            android:layout_margin="@dimen/five_dp"
            android:background="@drawable/rounded_border">

            <Spinner
                android:id="@+id/spinnerScholIndusExp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/forty_dp"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/twenty_dp"

                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spinnerScholIndusExp"
            android:layout_margin="@dimen/five_dp"
            android:background="@drawable/rounded_border"

            >

            <Spinner
                android:id="@+id/spinnerScholmodeOfClass"
                android:layout_width="match_parent"
                android:layout_height="@dimen/forty_dp"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/twenty_dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spinnerScholIndusExp"
            android:layout_margin="@dimen/five_dp"
            android:background="@drawable/rounded_border">

            <Spinner
                android:id="@+id/spinnerScholPreSub"
                android:layout_width="match_parent"
                android:layout_height="@dimen/forty_dp"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/twenty_dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/spinnerScholmodeOfClass">

            <Button
                android:id="@+id/scholIdProof"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/five_dp"
                android:background="@drawable/text_bg_btn"
                android:fontFamily="@font/ubuntu_regular"
                android:text="Id Proof"
                android:textColor="@color/white"
                android:textSize="@dimen/fifteen_dp" />

            <TextView
                android:id="@+id/scholFacIdProofText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/ten_dp"
                android:layout_toRightOf="@+id/scholIdProof"
                android:fontFamily="@font/ubuntu_regular"
                android:text="ChoosePhoto..." />

        </RelativeLayout>

        <EditText
            android:id="@+id/scholFacIdProofNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/scholIdProof"
            android:layout_margin="@dimen/five_dp"
            android:fontFamily="@font/ubuntu_regular"
            android:hint="ID Proof Number"
            android:imeOptions="actionDone" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/scholFacIdProofNumber">

            <Button
                android:id="@+id/scholFacBioData"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/five_dp"
                android:background="@drawable/text_bg_btn"
                android:fontFamily="@font/ubuntu_regular"
                android:padding="@dimen/five_dp"
                android:text="Bio Data"
                android:textColor="@color/white"
                android:textSize="@dimen/fifteen_dp" />

            <TextView
                android:id="@+id/scholFacBioDataText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/ten_dp"
                android:layout_toRightOf="@+id/scholFacBioData"
                android:fontFamily="@font/ubuntu_regular"
                android:text="Choose Photo..." />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/scholFacBioData">

            <Button
                android:id="@+id/scholFacBankDetails"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/five_dp"
                android:background="@drawable/text_bg_btn"
                android:fontFamily="@font/ubuntu_regular"
                android:padding="@dimen/five_dp"
                android:text="Bank Details"
                android:textColor="@color/white"
                android:textSize="@dimen/fifteen_dp" />

            <TextView
                android:id="@+id/scholFactBankDetailText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/ten_dp"
                android:layout_toRightOf="@+id/scholFacBankDetails"
                android:fontFamily="@font/ubuntu_regular"
                android:text="Choose Photo..." />

        </RelativeLayout>

        <Button
            android:id="@+id/btnScholFacReg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/five_dp"

            android:background="@drawable/login_btn"
            android:fontFamily="@font/ubuntu_regular"
            android:text="@string/submit"
            android:textColor="@color/white" />

    </LinearLayout>

</ScrollView>