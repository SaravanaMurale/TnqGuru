<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="School"
        />


    <Spinner
        android:id="@+id/spinnerSchoLevel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

     <com.google.android.material.textfield.TextInputLayout
      android:id="@+id/scholFacNameInput"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/selectSchoLevel"
      >

      <EditText
          android:id="@+id/scholFacName"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:hint="Name"
          />

  </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/scholFacMobileInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/scholFacNameInput"
        >

        <EditText
            android:id="@+id/scholFacMobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mobile"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <Spinner
        android:id="@+id/spinnerFacCountry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scholFacMobileInput"
        />



</RelativeLayout>