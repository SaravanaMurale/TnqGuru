<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="College Student Registration"
        android:textSize="@dimen/twenty_five_sp"
        android:fontFamily="@font/ubuntu_regular"
        android:gravity="center"
        android:textColor="@color/dar_blue"
        android:layout_marginTop="@dimen/ten_dp"/>



    <Spinner
        android:id="@+id/spinnerSelectColStu"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/fifty_dp" />

        <EditText
            android:id="@+id/colgStuName"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:paddingLeft="@dimen/twenty_dp"
            android:hint="Name"
            android:fontFamily="@font/ubuntu_regular"
            android:background="@drawable/rounded_border"
            android:layout_gravity="center"
            android:inputType="text"
            android:imeOptions="actionNext"
            android:layout_marginTop="@dimen/ten_dp"
            android:layout_below="@id/spinnerSelectColStu"
            />

        <EditText
            android:id="@+id/colgStuMobile"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:paddingLeft="@dimen/twenty_dp"
            android:hint="Mobile"
            android:inputType="number"
            android:maxLength="10"
            android:imeOptions="actionNext"
            android:layout_below="@id/colgStuName"
            android:fontFamily="@font/ubuntu_regular"
            android:background="@drawable/rounded_border"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/ten_dp"
            />

        <Spinner
            android:id="@+id/spinnerColgStuCountry"
            android:layout_width="match_parent"
            android:layout_height="@dimen/forty_dp"
            android:layout_below="@+id/colgStuMobile"
            android:layout_marginTop="@dimen/ten_dp"
            />

        <EditText
            android:id="@+id/colgStuAddress"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:paddingLeft="@dimen/twenty_dp"
            android:paddingBottom="@dimen/twenty_dp"
            android:gravity="bottom"
            android:hint="Address"
            android:layout_below="@id/spinnerColgStuCountry"
            android:fontFamily="@font/ubuntu_regular"
            android:background="@drawable/rounded_border"
            android:layout_gravity="center"
            android:inputType="textPostalAddress"
            android:imeOptions="actionNext"
            android:layout_marginTop="@dimen/ten_dp"/>

        <EditText
            android:id="@+id/colgStuPincodeInput"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="Pincode"
            android:paddingLeft="@dimen/twenty_dp"
            android:layout_below="@+id/colgStuAddress"
            android:fontFamily="@font/ubuntu_regular"
            android:background="@drawable/rounded_border"
            android:layout_gravity="center"
            android:inputType="number"
            android:maxLines="6"
            android:imeOptions="actionNext"
            android:layout_marginTop="@dimen/ten_dp"/>

        <Spinner
            android:id="@+id/colgStuDept"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/colgStuPincodeInput"
            android:layout_marginTop="@dimen/ten_dp"
            />

        <EditText
            android:id="@+id/colgStuEmail"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="Email"
            android:paddingLeft="@dimen/twenty_dp"
            android:layout_below="@+id/colgStuDept"
            android:fontFamily="@font/ubuntu_regular"
            android:background="@drawable/rounded_border"
            android:layout_gravity="center"
            android:inputType="textEmailAddress"
            android:layout_marginTop="@dimen/ten_dp"/>

        <EditText
            android:id="@+id/colgStuPassword"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="Password"
            android:inputType="textWebPassword"
            android:imeOptions="actionNext"
            android:paddingLeft="@dimen/twenty_dp"
            android:layout_below="@+id/colgStuEmail"
            android:fontFamily="@font/ubuntu_regular"
            android:background="@drawable/rounded_border"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/ten_dp"/>


        <Spinner
            android:id="@+id/colgStuModeOfClass"
            android:layout_width="match_parent"
            android:layout_height="@dimen/forty_dp"
            android:layout_below="@+id/colgStuPassword"
            android:layout_marginTop="@dimen/ten_dp"
            />

        <Button
            android:id="@+id/btnColStuReg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/submit"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/ten_dp"
            android:background="@drawable/text_bg_btn"
            android:textColor="@color/white"
            android:layout_below="@+id/colgStuModeOfClass"/>



    </RelativeLayout>














</ScrollView>